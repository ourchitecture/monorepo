{
  "name": "@ourstage/system",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.11.1 <21.0.0",
    "npm": ">=10.4.0",
    "yarn": ">=1.22.21"
  },
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "build": "backstage-cli repo build --all",
    "build-image": "yarn workspace @ourstage/backend build-image",
    "build:all": "yarn build",
    "build:backend": "yarn workspace @ourstage/backend build",
    "clean": "backstage-cli repo clean",
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint",
    "lint:changes": "backstage-cli repo lint --since origin/main",
    "start": "yarn workspace @ourstage/app start",
    "start-backend": "yarn workspace @ourstage/backend start",
    "test": "backstage-cli repo test --watchAll=false",
    "test:all": "backstage-cli repo test --watchAll=false --coverage",
    "test:changes": "backstage-cli repo test --since origin/main --watchAll=false",
    "test:e2e": "playwright test",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "new": "backstage-cli new --scope internal"
  },
  "devDependencies": {
    "@backstage/cli": "^0.25.2",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.32.3",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "~5.3.0"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  }
}
